<body class="">
   
    <div class=" flex flex-col md:flex-row md:space-x-6 space-y-6 md:space-y-0 bg-cyan-700 w-full max-w-4xl p-8 sm:p-12 rounded-xl shadow-lg text-white overflow-hidden">
    <div class="flex flex-col space-y-8 justify-between">
        <div>
          <h1 class="font-bold text-4xl tracking-wide">Sign In</h1>
          <p class="pt-2 text-cyan-100 text-sm">
            Hello please fill out this form. Thank you!
          </p>
        </div>
        <div class=" flex flex-col space-y-6">
          <div class=" inline-flex space-x-2 items-center">
            <ion-icon name="call" class="text-teal-300 text-xl"></ion-icon>
            <span>+(215) 980 9976</span>
          </div>
          <div>
            <ion-icon name="mail" class="text-teal-300 text-xl"></ion-icon>
            <span>lcalixte77@gmail.com</span>
          </div>
          <div>
            <ion-icon name="location" class="text-teal-300 text-xl"></ion-icon>
            <span>2250 Terwood Rd Drive, Huntingdon Valley, PA 19006</span>
          </div>
        </div>
        <div class="flex space-x-4 text-lg">
          <a
            href="https://www.facebook.com/LidiaCalixteRE/">
            <ion-icon name="logo-facebook" class="text-teal-300 text-xl"></ion-icon></a>
          <a
            href="https://www.facebook.com/LidiaCalixteRE/">
            <ion-icon name="logo-linkedin" class="text-teal-300 text-xl"></ion-icon></a>
        </div>
       
      </div>
        <div class = "relative">
          <div class = "absolute z-0 w-40 h-40 bg-teal-400 rounded-full -right-28 -top-28" ></div>
          <div class = "absolute z-0 w-40 h-40 bg-teal-400 rounded-full -left-28 -bottom-16" ></div>
          <div class=" relative z-10 bg-white rounded-xl shadow-lg p-8 text-gray-600 md:w-80">
            <form action="/submit" method="post" class=" flex flex-col space-y-4 id="myForm"">
              <div>
                <label for="name" class="text-sm">Your Name</label>
                <input type="text" name="name" placeholder="Your name" 
                  class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300">
              </div>
              <div>
                <label for="email" class="text-sm">Email Address</label>
                <input type="text" name="email" placeholder="Email Address"
                  class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300">
              </div>
              <div>
                  <label for="phone" class="text-sm">Phone Number</label>
                  <input type="text" name="phone" placeholder="Phone Number" 
                    class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300">
                </div>
      
              <div>
                <label for="name" class="text-sm">Message</label>
                <textarea rows=4 placeholder="Please enter any message here"
                  class="ring-1 ring-gray-300 w-full rounded-md px-4 py-2 mt-2 outline-none focus:ring-2 focus:ring-teal-300">
                 </textarea>
              </div>
      
              <button
                class="inline-block self-end bg-cyan-700 text-white font-bold rounded-lg px-6 py-2 uppercase text-sm">Submit
              </button>
            </form>
            <script>
              window.onload = function() {
                  document.getElementById('myForm').reset();
              };
          </script>
          </div>
        </div>
    </div>

